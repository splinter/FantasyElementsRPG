<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" x:Class="FantasyElementsRPG.Client.Core.FatalExceptionUserControl.Views.FatalExceptionControl"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="640">

    <Grid x:Name="LayoutRoot" Background="#FFECEAEA">
        <Image HorizontalAlignment="Left" Height="130" Stretch="Fill" Margin="10,85,0,0" VerticalAlignment="Top" Width="218" Source="Images/1.png"/>
        <Image HorizontalAlignment="Left" Height="130" Stretch="Fill" Margin="412,85,0,0" VerticalAlignment="Top" Width="218" Source="Images/2.png"/>
        <TextBlock HorizontalAlignment="Left" Margin="233,108,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="82" Width="174">
        	<Run Text="Fatal Exception has occurred. "/>
        	<LineBreak/>
        	<Run Text="Please contact the developers."/>
        	<LineBreak/>
        	<Run Text="The application browser window will close upon sending error results to the server "/>
        </TextBlock>

    </Grid>
</UserControl>
